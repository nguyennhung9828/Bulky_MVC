@{
}
@model Category
<table class="table table-bordered">
<tr>
    <td>
            <h2>Edit Category</h2>
    </td>
</tr>
    <form method="post">
<tr>
        <td>
            <div class="">
                <label asp-for="Name"></label>
                <input class="form-control" type="type" name="Name" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </td>
</tr>
<tr>
        <td>
            <div class="pt-2">
                <label asp-for="DisplayOrder"></label>
                <input class="form-control" type="type" name="DisplayOrder" value="@Model.DisplayOrder" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
        </td>
</tr>
<tr>
        <td>
            <button type="submit" class="btn btn-outline-primary" asp-controller="Category" asp-action="Edit">Update</button>
            <a type="button" class="btn btn-outline-primary" asp-controller="Category" asp-action="Index">Back to Category</a>
        </td>
       
</tr>
    </form>
</table>

